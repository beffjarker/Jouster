{
  "ignorePatterns": ["**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "platform:angular",
                "bannedExternalImports": [
                  "@aws-sdk/*",
                  "@middy/*",
                  "@sendgrid/*",
                  "@signnow/api-client",
                  "*axios*",
                  "got",
                  "pdfkit",
                  "redis",
                  "winston"
                ]
              },
              {
                "sourceTag": "platform:node",
                "bannedExternalImports": [
                  "@angular/*",
                  "@ngneat/*",
                  "trackjs",
                  "rxjs",
                  "zone.js"
                ]
              },
              {
                "sourceTag": "platform:typescript",
                "bannedExternalImports": [
                  "@middy/*",
                  "@sendgrid/*",
                  "@signnow/api-client",
                  "got",
                  "pdfkit",
                  "redis",
                  "winston",
                  "@angular/*",
                  "@ngneat/*",
                  "trackjs",
                  "rxjs",
                  "zone.js"
                ]
              },
              {
                "sourceTag": "platform:angular",
                "onlyDependOnLibsWithTags": [
                  "platform:angular",
                  "platform:typescript"
                ]
              },
              {
                "sourceTag": "platform:node",
                "onlyDependOnLibsWithTags": [
                  "platform:node",
                  "platform:typescript"
                ]
              },
              {
                "sourceTag": "platform:typescript",
                "onlyDependOnLibsWithTags": ["platform:typescript"]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:shell",
                  "type:ui",
                  "type:api",
                  "type:domain",
                  "type:data-access",
                  "type:utility",
                  "type:service"
                ]
              },
              {
                "sourceTag": "type:shell",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:ui",
                  "type:data-access",
                  "type:api",
                  "type:domain"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:ui",
                  "type:data-access",
                  "type:domain",
                  "type:utility",
                  "type:service"
                ]
              },
              {
                "sourceTag": "type:api",
                "onlyDependOnLibsWithTags": [
                  "type:api",
                  "type:data-access",
                  "type:domain",
                  "type:utility"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:data-access",
                  "type:domain"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:ui",
                  "type:api",
                  "type:domain",
                  "type:utility"
                ]
              },
              {
                "sourceTag": "type:domain",
                "onlyDependOnLibsWithTags": ["type:domain"]
              },
              {
                "sourceTag": "type:service",
                "onlyDependOnLibsWithTags": ["type:service"]
              },
              {
                "sourceTag": "type:e2e",
                "onlyDependOnLibsWithTags": ["type:domain", "type:e2e"]
              },
              {
                "sourceTag": "scope:ecom-shared",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared"
                ]
              },
              {
                "sourceTag": "scope:accounts",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:rs-api-shared",
                  "scope:accounts",
                  "scope:containers"
                ]
              },
              {
                "sourceTag": "scope:rs-address-api",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:rs-api-shared",
                  "scope:addresses",
                  "scope:schedules",
                  "scope:divisions",
                  "scope:mashery",
                  "scope:pickup"
                ]
              },
              {
                "sourceTag": "scope:addresses",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:rs-api-shared",
                  "scope:addresses",
                  "scope:schedules",
                  "scope:divisions",
                  "scope:mashery"
                ]
              },
              {
                "sourceTag": "scope:containers",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:rs-api-shared",
                  "scope:containers"
                ]
              },
              {
                "sourceTag": "scope:emails",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:rs-api-shared",
                  "scope:emails"
                ]
              },
              {
                "sourceTag": "scope:ecommerce",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:ecommerce"
                ]
              },
              {
                "sourceTag": "scope:gis",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:rs-api-shared",
                  "scope:gis",
                  "scope:mashery"
                ]
              },
              {
                "sourceTag": "scope:legal",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:legal"
                ]
              },
              {
                "sourceTag": "scope:mdm",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:mdm"
                ]
              },
              {
                "sourceTag": "scope:notifications",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:rs-api-shared",
                  "scope:notifications"
                ]
              },
              {
                "sourceTag": "scope:preferences",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:rs-api-shared",
                  "scope:preferences"
                ]
              },
              {
                "sourceTag": "scope:schedules",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:rs-api-shared",
                  "scope:schedules",
                  "scope:mashery"
                ]
              },
              {
                "sourceTag": "scope:promo",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:promo"
                ]
              },
              {
                "sourceTag": "scope:purchasing",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:ecom-shared",
                  "scope:purchasing"
                ]
              },
              {
                "sourceTag": "scope:rs-api-auth",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:rs-api-shared",
                  "scope:mashery",
                  "scope:rs-api-auth"
                ]
              },
              {
                "sourceTag": "isolated:true",
                "onlyDependOnLibsWithTags": ["scope:ui-brand"]
              }
            ],
            "enforceBuildableLibDependency": true
          }
        ]
      }
    },
    {
      "extends": ["plugin:@nx/typescript"],
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "extends": ["plugin:@nx/javascript"],
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts"],
      "plugins": [
        "eslint-plugin-import",
        "@angular-eslint/eslint-plugin",
        "@typescript-eslint",
        "@ngneat/eslint-plugin-reactive-forms"

      ],
      "settings": {
        "import/internal-regex": "^@digital-platform/"
      },
      "rules": {
        "no-prototype-builtins": "warn",
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "app",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "app",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "@angular-eslint/no-conflicting-lifecycle": "error",
        "@angular-eslint/no-empty-lifecycle-method": "error",
        "@angular-eslint/no-host-metadata-property": "error",
        "@angular-eslint/no-input-rename": "error",
        "@angular-eslint/no-inputs-metadata-property": "error",
        "@angular-eslint/no-output-native": "error",
        "@angular-eslint/no-output-on-prefix": "error",
        "@angular-eslint/no-output-rename": "error",
        "@angular-eslint/no-outputs-metadata-property": "error",
        "@typescript-eslint/no-useless-constructor": "error",
        "@angular-eslint/use-lifecycle-interface": "error",
        "@angular-eslint/use-pipe-transform-interface": "error",
        "@typescript-eslint/consistent-type-definitions": "error",
        "@typescript-eslint/dot-notation": "off",
        "@typescript-eslint/explicit-member-accessibility": [
          "off",
          {
            "accessibility": "explicit"
          }
        ],
        "@typescript-eslint/member-ordering": "warn",
        "@typescript-eslint/naming-convention": [
          "error",
          {
            "selector": "variable",
            "format": ["camelCase", "snake_case", "UPPER_CASE", "PascalCase"]
          }
        ],
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-empty-interface": "error",
        "@typescript-eslint/no-inferrable-types": [
          "error",
          {
            "ignoreParameters": true
          }
        ],
        "@typescript-eslint/no-misused-new": "error",
        "@typescript-eslint/no-non-null-assertion": "error",
        "@typescript-eslint/no-shadow": "error",
        "@typescript-eslint/no-unused-expressions": "error",
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/prefer-function-type": "error",
        "@typescript-eslint/unified-signatures": "error",
        "@typescript-eslint/ban-types": "warn",
        "@typescript-eslint/no-namespace": "warn",
        "arrow-body-style": "error",
        "constructor-super": "error",
        "dot-notation": "off",
        "eqeqeq": ["warn", "smart"],
        "guard-for-in": "error",
        "id-denylist": "off",
        "id-match": "off",
        "import/no-deprecated": "warn",
        "import/newline-after-import": "error",
        "import/order": [
          "error",
          {
            "newlines-between": "always",
            "alphabetize": {
              "order": "asc",
              "orderImportKind": "asc",
              "caseInsensitive": true
            },
            "groups": [
              ["builtin", "external", "unknown"],
              ["internal", "parent", "sibling", "index", "object", "type"]
            ],
            "pathGroups": [
              {
                "pattern": "@digital-platform/**",
                "group": "internal",
                "position": "before"
              },
              {
                "pattern": "./**",
                "group": "sibling",
                "position": "after"
              }
            ],
            "distinctGroup": false
          }
        ],
        "no-bitwise": "error",
        "no-caller": "error",
        "no-console": [
          "error",
          {
            "allow": [
              "log",
              "debug",
              "warn",
              "dir",
              "timeLog",
              "assert",
              "clear",
              "count",
              "countReset",
              "group",
              "groupEnd",
              "table",
              "dirxml",
              "error",
              "groupCollapsed",
              "Console",
              "profile",
              "profileEnd",
              "timeStamp",
              "context"
            ]
          }
        ],
        "no-debugger": "error",
        "no-empty": "off",
        "no-empty-function": "off",
        "no-eval": "error",
        "no-fallthrough": "error",
        "no-new-wrappers": "error",
        "no-restricted-imports": ["error", "rxjs/Rx"],
        "no-shadow": "off",
        "no-throw-literal": "error",
        "no-undef-init": "error",
        "no-underscore-dangle": "off",
        "no-useless-escape": "warn",
        "no-case-declarations": "warn",
        "no-unused-expressions": "error",
        "no-var": "error",
        "prefer-const": "error",
        "radix": "warn",
        "@ngneat/eslint-plugin-reactive-forms/no-angular-forms-imports": "error"
      }
    },
    {
      "files": ["*.html"],
      "plugins": ["@angular-eslint/eslint-plugin-template"],
      "rules": {
        "@angular-eslint/template/banana-in-box": "error",
        "@angular-eslint/template/eqeqeq": "error",
        "@angular-eslint/template/no-negated-async": "error"
      }
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ],
  "plugins": ["@nx"],
  "root": true
}
