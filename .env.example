# AWS Configuration for DynamoDB and S3
# Default credentials for regular operations (jouster-dev user)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-west-2

# Admin credentials (DEVELOPMENT ONLY - for elevated privileges when needed)
# Use these only when IAM operations are required (creating policies, roles, etc.)
AWS_ADMIN_ACCESS_KEY_ID=your_admin_access_key_here
AWS_ADMIN_SECRET_ACCESS_KEY=your_admin_secret_key_here
AWS_ADMIN_REGION=us-west-2

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-west-2

# S3 Configuration
S3_BUCKET_NAME=your_bucket_name_here
S3_REGION=us-west-2
S3_EMAIL_PREFIX=email/

# Instagram Graph API Configuration (Current Standard)
# Get these values by following the setup guide below
INSTAGRAM_APP_ID=your_facebook_app_id_from_developers_console
INSTAGRAM_APP_SECRET=your_facebook_app_secret_from_developers_console
INSTAGRAM_ACCESS_TOKEN=your_page_access_token_from_graph_api_explorer
INSTAGRAM_USER_ID=your_instagram_business_account_id

# Facebook Page Configuration (Required for Instagram Graph API)
FACEBOOK_PAGE_ID=your_facebook_page_id_from_graph_api_explorer
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_from_graph_api_explorer

# Last.fm API Configuration
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_SHARED_SECRET=your_lastfm_shared_secret_here
LASTFM_USER=your_lastfm_username_here

# Backend Configuration
PORT=3000

# Development Environment
NODE_ENV=development

# SETUP INSTRUCTIONS:
# 1. Go to https://developers.facebook.com/ and create an app
# 2. Add Instagram Graph API product to your app
# 3. Convert @beffjarker to Business/Creator account on Instagram
# 4. Create Facebook Page at https://www.facebook.com/pages/create
# 5. Connect Instagram account to Facebook Page in Instagram settings
# 6. Get AWS credentials from IAM console and add them here
# 7. Get Last.fm API key from https://www.last.fm/api/account/create
