# Environment Configuration Template for Production
# Copy to .env.production and fill in production credentials
# CRITICAL: Use production secrets management (AWS Secrets Manager)

NODE_ENV=production
PORT=3000

# AWS Configuration - Production Environment
# IAM User: jouster-prod
# RECOMMENDATION: Use AWS Secrets Manager or Parameter Store
AWS_ACCESS_KEY_ID=your_production_access_key_here
AWS_SECRET_ACCESS_KEY=your_production_secret_key_here
AWS_REGION=us-west-2

# DynamoDB - Production (AWS Service)
DYNAMODB_REGION=us-west-2

# S3 - Production Environment
S3_BUCKET_NAME=jouster-prod-bucket
S3_REGION=us-west-2
S3_EMAIL_PREFIX=email/

# Instagram - Production Account
INSTAGRAM_APP_ID=your_production_facebook_app_id
INSTAGRAM_APP_SECRET=your_production_facebook_app_secret
INSTAGRAM_ACCESS_TOKEN=your_production_page_access_token
INSTAGRAM_USER_ID=your_production_instagram_business_account_id

# Facebook - Production Page
FACEBOOK_PAGE_ID=your_production_facebook_page_id
FACEBOOK_PAGE_ACCESS_TOKEN=your_production_page_access_token

# Last.fm - Production Account
LASTFM_API_KEY=your_production_lastfm_api_key
LASTFM_SHARED_SECRET=your_production_lastfm_shared_secret
LASTFM_USER=your_production_lastfm_username

# Monitoring - Production
SENTRY_DSN=your_production_sentry_dsn
LOGROCKET_APP_ID=your_production_logrocket_app_id

# Feature Flags for Production
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# Production-specific settings
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

